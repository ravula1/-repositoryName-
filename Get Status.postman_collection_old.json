		{
			"name": "List of Books",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"/* Dealing with arrys to get the property */\r",
							"const response = pm.response.json();\r",
							"\r",
							"/* looking for available books \r",
							"Non-fiction added as param to filter results*/\r",
							"const nonFictionBooks = response.filter((book) => book.available===true);\r",
							"const book = nonFictionBooks[0];\r",
							"console.log(nonFictionBooks[0]);\r",
							"\r",
							"if(book){\r",
							"   pm.globals.set(\"bookid\",book.id);\r",
							"}\r",
							"/*Check if book is available - fiction*/\r",
							"pm.test(\"Book found\", () =>{\r",
							"pm.expect(book).to.be.an('object');\r",
							"pm.expect(book.available).to.be.true;\r",
							"pm.expect(book.available).to.eql(true);\r",
							"pm.expect(book.type).to.eql(\"non-fiction\")\r",
							"});\r",
							"\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseURL}}/books?type=non-fiction",
					"host": [
						"{{baseURL}}"
					],
					"path": [
						"books"
					],
					"query": [
						{
							"key": "type",
							"value": "non-fiction"
						},
						{
							"key": "available",
							"value": "false",
							"disabled": true
						}
					]
				}
			},
			"response": []
		},
